<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profile: {{#user}}{{displayname}}{{/user}}</title>
    <link rel="stylesheet" href="/css/profile.css">
  </head>
  <body>
    <div class="heading">
      <div class="name">
        <h1>{{#user}}{{displayname}}{{/user}}</h1>
      </div>
      <div class="startdate">
        <h3>Gobbling since: {{#user}}{{startdate}}{{/user}}</h3>
      </div>
      <div class="image">
        <img src="/img/missing-avatar.png" alt="">
      </div>
    </div>

    <div class="body">
      <div class="my-gobbles">
        <div class="title">
          <h2>My Gobbles</h2>
        </div>

        <div class="posts">
          {{#posts}}
          <div class="post">
            <div class="author">
              <p>{{author}}</p>
            </div>
            <div class="post">
              <h5>{{body}}</h5>
            </div>
            {{#isLiked}}
            <div class="likes">
              <p>Liked by:
                {{#likedBy}}<span>{{.}}, </span>{{/likedBy}}
              </p>
            </div>
            {{/isLiked}}
            <div class="buttons">
              {{^canLike}}
              <button type="button">Liked!</button>
              {{/canLike}}
              {{#canLike}}
              <form action="/posts/home/{{id}}/like" method="post">
                <button type="submit">Like</button>
              </form>
              {{/canLike}}
              {{#delete}}
              <form action="/posts/home/{{id}}/delete" method="post">
                <button type="submit">Delete</button>
              </form>
              {{/delete}}
            </div>
          </div>
          {{/posts}}
        </div>
      </div>

      <div class="my-likes">
        <div class="title">
          <h2>My Likes</h2>
        </div>

        <div class="posts">
          {{#likes}}
          <div class="post">
            <div class="author">
              <p>{{author}}</p>
            </div>
            <div class="post">
              <h5>{{body}}</h5>
            </div>
            {{#isLiked}}
            <div class="likes">
              <p>Liked by:
                {{#likedBy}}<span>{{.}}, </span>{{/likedBy}}
              </p>
            </div>
            {{/isLiked}}
            <div class="buttons">
              {{^canLike}}
              <button type="button">Liked!</button>
              {{/canLike}}
              {{#canLike}}
              <form action="/posts/home/{{id}}/like" method="post">
                <button type="submit">Like</button>
              </form>
              {{/canLike}}
              {{#delete}}
              <form action="/posts/home/{{id}}/delete" method="post">
                <button type="submit">Delete</button>
              </form>
              {{/delete}}
            </div>
          </div>
          {{/likes}}
        </div>
      </div>
    </div>
  </body>
</html>

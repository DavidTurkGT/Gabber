<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Home: {{#user}}{{displayname}}{{/user}}</title>
    <link rel="stylesheet" href="/css/home.css">
  </head>
  <body>
    <div class="heading">
      <div class="image">
        <img src="/img/gobble.jpg" alt="" onClick="gobble()">
      </div>
      <div class="name">
        <h1><a href="/users/{{#user}}{{id}}/{{username}}{{/user}}">
          {{#user}}{{displayname}}{{/user}}
            </a>
        </h1>
      </div>
      <div class="startdate">
        <h3>Gobbling since: {{#user}}{{startdate}}{{/user}}</h3>
      </div>
    </div>
    <div class="body">
      <div class="sidebar">
        <h2>My Gobbles</h2>
        <h2>My Likes</h2>
      </div>
      <div class="input-form hidden">
        <form action="/home/{{#user}}{{id}}/{{username}}{{/user}}/post" method="post">
          <input type="text" name="post" value="" placeholder="What do you want to gobble about?">
        </form>
      </div>
      <div class="posts">
        <div class="errors">
          {{#errors}}
          <p>{{.}}</p>
          {{/errors}}
        </div>
        {{#posts}}
        <div class="post">
          <div class="author">
            <p>{{author}}</p>
          </div>
          <div class="post">
            <h5>{{body}}</h5>
          </div>
          {{#isLiked}}
          <div class="likes">
            <p>Liked by:
              {{#likedBy}}<span>{{.}}, </span>{{/likedBy}}
            </p>
          </div>
          {{/isLiked}}
          <div class="buttons">
            {{^canLike}}
            <button type="button">Liked!</button>
            {{/canLike}}
            {{#canLike}}
            <form action="/posts/home/{{id}}/like" method="post">
              <button type="submit">Like</button>
            </form>
            {{/canLike}}
            {{#delete}}
            <form action="/posts/home/{{id}}/delete" method="post">
              <button type="submit">Delete</button>
            </form>
            {{/delete}}
          </div>
        </div>
        {{/posts}}
      </div>
    </div>

    <script src="/javascript/home.js" charset="utf-8"></script>
  </body>
</html>

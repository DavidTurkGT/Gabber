<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/login.css">
  </head>
  <body>
    <div class="container">
      <div class="heading">
        <h1>Sign Up</h1>
      </div>
      <div class="errors">
        <ul>
          {{#errors}}
          <li>{{.}}</li>
          {{/errors}}
        </ul>
      </div>
      <div class="messages">
        <ul>
          {{#messages}}
          <li>{{.}}</li>
          {{/messages}}
        </ul>
      </div>
      <div class="signup">
        <form class="signup-form" action="/home/createuser" method="post">
          <input type="text" name="first-name" value="" placeholder="First Name">
          <input type="text" name="last-name" value="" placeholder="Last Name">
          <input type="text" name="username" value="" placeholder="Username">
          <input type="password" name="password" value="" placeholder="Password">
          <input type="password" name="confirmPassword" value="" placeholder="Confirm Password">
          <button type="submit">Sign Up</button>
        </form>
      </div>
      </div>
    </div>
  </body>
</html>
